    <title>一般布局</title>
    <style>
        html,
        body,
        .parent {
            /*不能有缝隙*/
            margin: 0;
            /*将页面进行撑开*/
            height: 100%;
            /*隐藏溢出元素*/
            overflow: hidden;
            font-family: sans-serif, "微軟正黑體";
        }

        .header {
            position: absolute;
            /*上边距和上内边距之和零*/
            top: 0;
            left: 0;
            right: 0;
            height: 50px;
            background: #68a08b;
        }

        .left {
            position: absolute;
            left: 0;
            top: 50px;
            bottom: 60px;
            width: 150px;
            /* background: red; */
            overflow: auto;
            box-shadow: 1px 0px 10px rgba(187, 190, 190, 0.4);
        }

        .right {
            position: absolute;
            left: 150px;
            top: 50px;
            bottom: 20px;
            right: 0;
            border-width:1px;
            /*对溢出元素，可以以滚动条方式显示*/
            overflow: auto;
        }

            /*.right .inner {
                min-height: auto;
            }*/

        .bottom {
            position: absolute;
            left: 0;
            right: 0;
            bottom: 0;
            height: 20px;
            font-size: 8px;
            text-align: center;
            border-top: 1px solid #E8E8E8;
        }

        .content {
            border-radius: 15px;
            box-shadow: 1px 0px 10px rgba(187, 190, 190, 0.4);
            margin: 15px;
        }

        .container {
            padding: 15px;
            border-radius: 15px;
            /* background:rgba(187, 190, 190, 0.4); */
        }

        .chb {
            top: 50px;
            bottom: 40px;
            padding-top: 15px;
            padding-left: 15px;
            /* overflow: auto; */
        }

        .chbButton {
            width: 150px;
            position: fixed;
            left: 0px;
            right: 0px;
            bottom: 20px;
            height: 40px;
            border-top: 1px solid #E8E8E8;
            box-shadow: 0px 5px 60px rgba(187, 190, 190, 0.4);
        }

        .logo {
            padding: 5px;
            height: 100%;
            vertical-align: middle;
        }
    </style>
</head>

